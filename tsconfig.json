{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "scr",
    "rootDirs": ["./src"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "src/**/*.ts", "./**/*.js", "types/*.d.ts"],
  "exclude": ["node_modules", "dist", "coverage", "tests"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
